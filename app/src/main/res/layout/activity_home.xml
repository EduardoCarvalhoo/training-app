<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.training.presentation.ui.home.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00BCD4"
        app:titleTextColor="@color/white"
        app:title="@string/home_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_create_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/home_create_text"
        android:textColor="@color/black"
        android:background="#DDDDDD"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/home_end_guideline"
        app:layout_constraintStart_toStartOf="@id/home_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar" />

    <TextView
        android:id="@+id/home_training_list_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/home_list_text"
        android:textColor="@color/black"
        android:background="#DDDDDD"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/home_end_guideline"
        app:layout_constraintStart_toStartOf="@id/home_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/home_create_text_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_end_guideline"
        app:layout_constraintStart_toStartOf="@id/home_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/home_training_list_text_view"
        tools:listitem="@layout/training_list_item" />

    <Button
        android:id="@+id/home_button_add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/home_button_add_description"
        android:background="@android:color/transparent"
        android:foreground="@drawable/baseline_add_circle_24"
        android:foregroundTint="#0612F6"
        app:layout_constraintBottom_toBottomOf="@+id/home_create_text_view"
        app:layout_constraintEnd_toEndOf="@+id/home_create_text_view"
        app:layout_constraintTop_toTopOf="@+id/home_create_text_view" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>